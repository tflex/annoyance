    '#collapsed' => FALSE,
  );

  $form['annoyance_custom_group']['annoyance_random_url'] = array(
    '#type' => 'textfield',
    '#title' => t('Random URL'),
    '#description' => t('One option from above is to randomly send the user to a specific URL. Enter the URL here.'),
